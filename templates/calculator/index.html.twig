{% extends 'base.html.twig' %}

{% block title %}Calculator
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h1 class="display-4 text-center">Calculator</h1>
		<div class="row justify-content-center">
			<div class="col-md-6">
				{{ form_start(form) }}
				<div class="form-group mb-3">
					{{ form_row(form.number1, { 'attr': { 'class': 'form-control' } }) }}
				</div>
				<div class="form-group mb-3">
					{{ form_row(form.number2, { 'attr': { 'class': 'form-control' } }) }}
				</div>
				<div class="form-group mb-3">
					{{ form_row(form.operation, { 'attr': { 'class': 'form-control' } }) }}
				</div>
				{{ form_widget(form.calculate , { 'attr': { 'class': 'form-control, btn btn-primary' } }) }}
				{{ form_end(form) }}
				{% if result is not null %}
					<h2 class="text-center">Result:
						{{ result }}</h2>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
